		 }

		.btc-title {
			margin-left: 2em;
			/*z-index: -1;*/
			margin-top: 202px;
			text-shadow: 0.2px 0.2px #000;
		}
		.topnav {
			overflow: hidden;
			/*background-color: #d0d0d0;*/
			/* Background color with 0.1 opacity. */
			background: rgba(76, 175, 80, 0.1);
			position: fixed;
			top: 0;
			width: 100%;
		}
		.topnav a {
			text-decoration: none;
			float: left;
			display: block;
			color: f2f2f2;
			text-align: center;
			padding: 14px 16px;
			color: #8A2BE2;
		}
		.topnav a:hover {
			background-color: #ddd;
			color: black;
		}
		.active {
			background-color: #4caf50;
			color: #fff !important;
		}
		.topnav .icon {
			display: none;
		}
		#home-link {
			padding-right: 16px;
			/*margin-right: 0px;*/
		}
/*		#blog-link {
			padding-left: 0px;
			margin-left: -16px;
		}*/
		#btc-heading {
			color: #4B0082;	
		}
		#btc-subheading {
			color: #8A2BE2;	
		}

/*		@media screen and (min-width: 768px) {
			.jumbotron {
			    padding: 0px 0;
			}
		}*/
		@media screen and (max-width: 1100px) {
			.topnav a:not(:first-child) {
				display: none;
			}
			.topnav a.icon {
				float: right;
				display: block;
				color: #fff;
			}
		}

		@media screen and (max-width: 1100px) {
			.topnav.responsive {
				position: relative;
				z-index: 1;
			}
			.topnav.responsive .icon {
				position: relative;
				position: absolute;
				right: 0;
				top: 0;
			}
			.topnav.responsive a {
				float: none;
				display: block;
				text-align: left;
				z-index: 1;
			}
			.topnav.responsive#blog-link {
				padding-top: 5px;
			}
		}

	</style>
  </head>
